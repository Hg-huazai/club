/* 弹出层 */
.content5-float {
  width: 100vw;
  height: 100vh;
  /* position: relative; */
  box-sizing: border-box;
  position: fixed;
  top: 76rpx;
  z-index: 1000;
}
.content5-float.img {
  display: none;
}
.content5-float .bg {
  background-color: rgba(0, 0, 0, .5);
  width: 100vw;
  height: 100vh;
}
.content5-float .box {
  position: absolute;
  top: 0;
  width: 100%;
  /* margin-left: 5%; */
  background-color: #fff;
  z-index: 1006;
}

/* 筛选内容 */
.content5-float .box {
  padding: 40rpx;
  padding-top: 10rpx;
  color: #666666;
}
.content5-float .box .title {
  font-size: 35rpx;
}
.content5-float .box .title {
  font-size: 35rpx;
  padding: 30rpx 0;
}
.content5-float .box .set .item {
  display: inline-block;
  background-color: #f5f5f5;
  text-align: center;
}
.content5-float .box .set {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.content5-float .box .set.radio .item {
  width: 44%;
  padding: 15rpx 0;
  border-radius: 30rpx;
}
.content5-float .box .set .item.active {
  background-color: #ffebed;
  color: #ff476d;
}
.content5-float .box .set.age .item {
  width: 42%;
  padding: 15rpx 0;
  border-radius: 30rpx;
}
.content5-float .box .set.age text {
  padding: 10rpx 0;
}
.content5-float .box .set.city .item {
  text-align: center;
  width: 30%;
  padding: 15rpx 0;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

