/* pages/news/index/index.wxss */
page {
  background-color: #f5f5f5;
}
.box {
  background-color: #fff;
  padding: 0 40rpx;
  border-top: 2rpx solid #eeeeee;
}
.box .item {
  border-bottom: 2rpx solid #eeeeee;
  padding: 20rpx 0;
}
.item .left-l .img {
  vertical-align: middle;
}
.item .left-l .img image{
  width: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}
.item .left-l .info {
  vertical-align: middle;
  padding-left: 30rpx;
}
.item .left-l .info .name {
  vertical-align: middle;
  color: #222222;
  font-size: 32rpx;
}
.item .left-l .info .text {
  vertical-align: middle;
  color: #666666;
  font-size: 28rpx;
}
.item .right-r  {
  position: relative;
}
.item .right-r .iconfont {
  color: #e0e0e0;
  font-size: 38rpx;
  position: absolute;
  top: 22rpx;
  right: 0rpx;
}
.null {
  color: #808080;
  text-align: center;
  padding-top: 20rpx;
  font-size: 30rpx;

}