/* pages/member/authentication/authentication.wxss */
page {
  background-color: #fafafa;
}
.top-tip {
  padding: 40rpx 30rpx 20rpx;
  color: #333333; 
}
.info-item {
  background-color: #fff;
  
}
.info-item .title {
  padding: 20rpx 30rpx;
  color: #585858;
  font-size: 32rpx;
}

.info-item .title text:nth-child(2){
  color: #fa0200;
}
.info-item .item {
  margin-bottom: 30rpx;
}
.info-item .img {
  display: flex;
  justify-content: space-around;
  position: relative;
}
.info-item .img .box {
  text-align: center;
  width: 35%;
  height: 173rpx;
  overflow: hidden;
  /* flex: 1; */
}
.info-item .img .box image{
  /* width: 100%; */
  height: 100%;
}
.info-item .img .box1 {
  border: 2rpx dashed #000;
}
.info-item .img .box2 {
  border: 2rpx solid #000;
  position: relative;
}
.info-item .img .box .tip{
  position: absolute;
  top: 40rpx;
  width: 100%;
  text-align: center;
}
.info-item .img .close{
  position: absolute;
  top: -23rpx;
  right: -316rpx;
  width: 100%;
  text-align: center;
  z-index: 1000;
  font-size: 34rpx;
}
.info-item .img .close.active{
  display: none;
}
.info-item .img .box .tip.show1{
  display: none;
}
.info-item .img .box .tip.show2{
  display: none;
}
.info-item .img .box .tip text:nth-child(1){
  color: #fa0200;
  display: block;
  font-size: 30rpx;
}

.info-item .img .box .tip text:nth-child(2){
  color: #ababab;
  display: block;
}
.info-item .name {
  padding: 0 30rpx;
  padding-bottom: 20rpx;
}
.info-item form .name text {
  vertical-align: middle;
  display: inline-block;
  width: 25%;
  text-align: right;
  font-size: 30rpx;
}
.info-item form .name input {
  vertical-align: middle;
  display: inline-block;
  border-bottom: 1rpx solid #000;
  margin-left: 30rpx;
  width: 60%;
}
.info-item form .name:nth-child(1) {
  padding-top: 40rpx;
}
.info-item form .button {
  padding: 40rpx 40rpx;
  background-color: #fafafa;
}
.info-item form .button button {
  /* margin-top: 40rpx; */
  width: 100%;
  background-color: #fff;
  border: 2rpx solid #585858;
  font-weight: normal;
  padding-left: 20rpx;
}



