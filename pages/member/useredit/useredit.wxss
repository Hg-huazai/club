@import '../../../colorui.wxss';
page {
  background-color: #f0f0f0;
}

.txt{
  width:160rpx;
  color: #999;
  font-size: 13px;
}
.mar{
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.blue{
  background-color: #fbdd4b!important;
}
textarea{
  width:auto;
  height:500rpx;
}
.my_cell{
  -webkit-box-align:flex-start;
  -webkit-align-items:flex-start;
  align-items:flex-start;
}
.my_border{position: relative}
.my_border:before {
  content:" ";
  position:absolute;
  left:0;
  top:0;
  right:0;
  height:1px;
  border-top:1rpx solid #D9D9D9;
  color:#D9D9D9;
  left:15px;
}
.my_img{
  padding:0 15px 10px;
  text-align: center;
  color:#eee;
}
.mar_l{
  margin-left:150rpx;
}
.weui-uploader__txt{
  width:77px;
  font-size: 15px;
  background: rgba(0, 0, 0, .5);
  position:absolute;
  bottom:0;
  left:0;
}

.store {
  background-color: #fff;
  margin-top: 26rpx;
  clear: right;
  padding-bottom:20rpx;
}

.store .title {
  color: #111;
  font-size: 16px;
  padding-left:25rpx;
}
.pictures{
  width:95%;
  height:150rpx;
  border:2rpx solid #D9D9D9;
  border-left: 0;
  border-right:0;
  position: relative
}
.IconBox{
  width:120rpx;
  height: 120rpx;
  border:2rpx solid #999;
  line-height:108rpx;
  text-align:center;
  position:absolute;
  top: 50%;
  left:50%;
  margin: -60rpx 0 0 -60rpx;
}
.store .storeinfo {
  display: flex;
  padding: 20rpx 0;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  border-bottom: 3rpx solid #ddd;
  border-top: 3rpx solid #ddd;
}

.store .storeinfo .storemain {
  flex: 1;
  margin-right: 10rpx;
}

.store .storeinfo .storemain .name {
  color: #111;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.store .storeinfo .verticalline {
  height: 70rpx;
  width: 3rpx;
  background-color: #ddd;
}

.store .storeinfo .call {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  padding: 5rpx 5rpx;
}

