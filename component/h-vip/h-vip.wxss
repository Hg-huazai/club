}
.content.right {
  position: absolute;
  right: 0;
}
.content .box{
  border: 1rpx solid #ff7688;
  border-radius: 10px;
  overflow: hidden;
  margin-bottom: 30rpx;
  width: 85%;
}
.content.left .box{
  margin-left: 10%;
}
.content.right .box{
  margin-left: 5%;
}
.content .box .item{
